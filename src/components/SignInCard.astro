<div
  class="w-full overflow-hidden rounded-2xl bg-white px-4 py-8 shadow-xl sm:px-8"
  inert=""
>
  <header class="flex flex-col items-center justify-center text-center">
    <div class="grid size-8 place-content-center rounded-md bg-neutral-700">
      <div class="size-4 rounded-full bg-white"></div>
    </div>
    <p class="mt-6 font-semibold text-[#131316]">Sign in to Acme Co</p>
    <p class="mt-1 text-xs text-[#747686]">
      Welcome back! Please sign in to continue
    </p>
  </header>

  <div class="mt-6 space-y-6">
    <div class="grid grid-cols-2 gap-x-4">
      <button
        style="box-shadow: 0px 0px 0px 1px rgba(25, 28, 33, 0.08), 0px 1px 0px 0px rgba(25, 28, 33, 0.02), 0px 2px 3px -1px rgba(0, 0, 0, 0.08);"
        class="flex h-[1.875rem] items-center justify-center gap-2 rounded-md px-2 text-sm font-medium text-[#42434D]"
        ><svg viewBox="0 0 20 20" class="size-4"
