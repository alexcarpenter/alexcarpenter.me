---
import { getEntry } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";
const page = await getEntry("pages", "uses");
const { Content, headings } = await page.render();
---

<BaseLayout title={page.data.title} description={page.data.description}>
  <header class="pb-8 pt-40 border-b border-neutral-200">
    <h1 class="font-semibold">{page.data.title}</h1>
    <p class="text-neutral-500">{page.data.description}</p>
  </header>

  <section class="py-8">
    <div class="relative grid grid-cols-3 items-start gap-x-8">
      <article class="col-span-2 prose">
        <Content />
      </article>

      <nav class="sticky top-8">
        <h2 class="sr-only">Table of contents</h2>
        <ul class="max-h-[80dvh] overflow-y-auto space-y-0.5">
          {
            headings.map((heading) => {
              return (
                <li>
                  <a href={`#${heading.slug}`} class="text-neutral-500">
                    {heading.text}
                  </a>
                </li>
              );
            })
          }
        </ul>
      </nav>
    </div>
  </section>
</BaseLayout>
