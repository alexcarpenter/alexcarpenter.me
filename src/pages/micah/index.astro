---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";

const meta = {
  title: "Micah Lee Carpenter",
  description: "Born May 09, 2023",
  lastUpdated: "2025-07-07T08:31:25-0400",
};
---

<BaseLayout title={meta.title} description={meta.description}>
  <article class="container mt-16">
    <header>
      <h1
        class="max-w-[40ch] text-2xl leading-tight font-medium tracking-tight"
      >
        {meta.title}
      </h1>
      <p
        class="text-muted-foreground mt-4 max-w-[55ch] font-medium text-pretty"
      >
        {meta.description}
      </p>
    </header>
    <div class="mt-8">
      <Image
        src="/images/micah-lee-carpenter.webp"
        width="960"
        height="720"
        alt="Micah Lee Carpenter"
      />
    </div>
  </article>
</BaseLayout>
