---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";

const meta = {
  title: "Micah Lee Carpenter",
  description: "Born May 09, 2023",
  lastUpdated: "2025-07-07T08:31:25-0400",
};
---

<BaseLayout title={meta.title} description={meta.description}>
  <article class="mt-16 container">
    <header>
      <h1
        class="text-2xl font-medium tracking-tight max-w-[40ch] leading-tight"
      >
        {meta.title}
      </h1>
      <p
        class="mt-4 text-foreground-muted font-medium max-w-[55ch] text-pretty"
      >
        {meta.description}
      </p>
    </header>
    <div class="mt-16">
      <Image
        src="/images/micah-lee-carpenter.webp"
        width="960"
        height="720"
        alt="Micah Lee Carpenter"
      />
    </div>
  </article>
</BaseLayout>
